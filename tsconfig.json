{
  "compilerOptions": {
    "target": "ESNext", 
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "outDir": "./lib", 
    "declarationDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "exclude": ["node_modules", "lib"]
}
